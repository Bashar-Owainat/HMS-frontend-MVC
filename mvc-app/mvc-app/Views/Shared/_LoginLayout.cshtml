<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/loginStyle/css/style.css">


</head>
<body>
	
    <section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					@if (ViewBag.Title == "Login")
					{
						
						<h2 class="heading-section">@ViewBag.login</h2>
					}
					else
					{
						<h2 class="heading-section">@ViewBag.register</h2>

					}
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="img" style="background-image: url(images/bg-1.jpg);">
			      </div>
						<div class="login-wrap p-4 p-md-5">
			      	<div class="d-flex">
			      		<div class="w-100">
									@if (ViewBag.Title == "Login")
									{

										<h3 class="mb-4">Sign In</h3>
									}
									else
									{
										<h3 class="mb-4">Sign Up</h3>

									}
			      			
			      		</div>
								<div class="w-100">
									<p class="social-media d-flex justify-content-end">
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
									</p>
								</div>
			      	</div>
							@if (ViewBag.Title == "Login")
							{
								
							

								<form method="post" action="@Url.Action("Login", "Users")" class="signin-form">
			      				<div class="form-group mb-3">
											<label class="label"  for="name">Username</label>
			      					<input type="text" name="loginDTO.Username" class="form-control" placeholder="Username" required>
			      				</div>
							   <div class="form-group mb-3">
		            			<label class="label" for="password">Password</label>
								<input type="password" name="loginDTO.Password" class="form-control" placeholder="Password" required>
								 </div>
								<div class="form-group">
		            				<button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
								</div>
								<div class="form-group d-md-flex">
		            				<div class="w-50 text-left">
			            				<label class="checkbox-wrap checkbox-primary mb-0">Remember Me
												  <input type="checkbox" checked>
												  <span class="checkmark"></span>
													</label>
												</div>
												<div class="w-50 text-md-right">
													<a href="#">Forgot Password</a>
												</div>
								</div>
								 </form>
							
								
								<p class="text-center">Not a member? <a  href="/users/register">Sign Up</a></p>
							}
							else
							{
								<form method="post" action="@Url.Action("Register", "Users")" class="signin-form">
			      				<div class="form-group mb-3">
											<label class="label"  for="name">Username</label>
										<input type="text" name="registerDTO.Username" class="form-control" placeholder="Username" required>
			      				</div>
							   <div class="form-group mb-3">
		            			<label class="label" for="password">Password</label>
										<input type="password" name="registerDTO.Password" class="form-control" placeholder="Password" required>
								 </div>
									<div class="form-group mb-3">
										<label class="label" for="Email">Email</label>
										<input type="email" name="registerDTO.Email" class="form-control" placeholder="Email" required>
									</div>
									<div class="form-group mb-3">
										<label class="label" for="PhoneNumber">PhoneNumber</label>
										<input type="text" name="registerDTO.PhoneNumber" class="form-control" placeholder="PhoneNumber" required>
									</div>
									
										<div class="form-group mb-3">
										<label class="label" for="Roles">Roles</label>
										<br>
										<label class="label" for="PropertyManager">PropertyManager</label>
										<input type="checkbox" name="registerDTO.Roles" value="PropertyManager" class="form-control">

										<label class="label" for="DistrictManager">DistrictManager</label>
										<input type="checkbox" name="registerDTO.Roles" value="DistrictManager" class="form-control">

										<label class="label" for="Anonymous">Anonymous</label>
										<input type="checkbox" name="registerDTO.Roles" value="Anonymous" class="form-control">

										<label class="label" for="Agent">Agent</label>
										<input type="checkbox" name="registerDTO.Roles" value="Agent" class="form-control">
										</div>
									
									<div class="form-group">
		            				<button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign Up</button>
								</div>
								<div class="form-group d-md-flex">
		            				<div class="w-50 text-left">
			            				<label class="checkbox-wrap checkbox-primary mb-0">Remember Me
												  <input type="checkbox" checked>
												  <span class="checkmark"></span>
													</label>
												</div>
												<div class="w-50 text-md-right">
													<a href="#">Forgot Password</a>
												</div>
								</div>
								 </form>
							
							}
						</div>
		      </div>
				</div>
			</div>
		</div>
	</section>
	<script src="~/loginStyle/js/jquery.min.js"></script>
	<script src="~/loginStyle/js/popper.js"></script>
	<script src="~/loginStyle/js/bootstrap.min.js"></script>
	<script src="~/loginStyle/js/main.js"></script>
    <div>
        @RenderBody()
    </div>
</body>
</html>
